<div class="status">
  <strong><%= status.user.full_name %></strong>
  <p><%= status.content %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
    <% if user_signed_in? && current_user == status.user %>
    	
    <% end %>
    <span class="admin">
       | <%= link_to 'Edit', edit_status_path(status) %> | 
      <%= link_to 'Delete', status, method: :delete, data: { confirm: "Are you sure want to delete this status?" } %>
    </span>
  </div>
</div>